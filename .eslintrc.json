{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.json"
    },
    "rules": {
        "prettier/prettier" : [
            "error",
            {
                "printWidth": 120,
                "singleQuote": false,
                "semi": true,
                "useTabs": true,
                "quoteProps": "consistent"
            }
        ]
    }
}
